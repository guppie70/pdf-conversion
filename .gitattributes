# Auto detect text files and normalize line endings to LF
* text=auto eol=lf

# Explicitly declare text files you want to always be normalized and converted
# to native line endings on checkout.

# Source code
*.cs text eol=lf
*.js text eol=lf
*.ts text eol=lf
*.razor text eol=lf
*.html text eol=lf
*.css text eol=lf
*.scss text eol=lf

# Python
*.py text eol=lf
*.pyi text eol=lf
*.pyw text eol=lf

# XSLT/XML
*.xslt text eol=lf
*.xml text eol=lf
*.xsl text eol=lf

# Configuration files
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.config text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Shell scripts (must use LF on Linux/macOS)
*.sh text eol=lf
*.bash text eol=lf

# Docker
Dockerfile text eol=lf
*.dockerfile text eol=lf
docker-compose.yml text eol=lf
.dockerignore text eol=lf

# Git
.gitignore text eol=lf
.gitattributes text eol=lf

# Project files
*.csproj text eol=lf
*.sln text eol=lf
*.props text eol=lf
*.targets text eol=lf

# Package management
package.json text eol=lf
package-lock.json text eol=lf
requirements.txt text eol=lf

# Denote binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.dll binary
*.exe binary
*.so binary
*.dylib binary
