@namespace PdfConversion.Shared
@using PdfConversion.Services
@using PdfConversion.Models
@inject ITransformationLogService LogService
@inject ILogger<TransformationLogPanel> Logger

@if (IsVisible)
{
    <div class="log-overlay" @onclick="Close">
        <div class="log-panel" @onclick:stopPropagation="true">
            <div class="log-panel-header">
                <h5 class="mb-0">
                    <i class="bi bi-journal-text me-2"></i>
                    Transformation Logs (@LogService.GetTotalCount())
                </h5>
                <button type="button" class="btn-close" @onclick="Close" aria-label="Close"></button>
            </div>

            <div class="log-panel-body">
                <div class="log-filters">
                    <div class="filter-group">
                        <label>Status:</label>
                        <select class="form-select form-select-sm" @bind="FilterStatus" @bind:after="RefreshLogs">
                            <option value="">All</option>
                            <option value="Success">Success</option>
                            <option value="Error">Error</option>
                            <option value="Warning">Warning</option>
                        </select>
                    </div>
                    <div class="filter-group">
                        <label>Search:</label>
                        <input type="text" class="form-control form-control-sm" placeholder="Search logs..."
                               @bind="SearchText" @bind:event="oninput" @bind:after="RefreshLogs" />
                    </div>
                    <div class="filter-group">
                        <label>Show:</label>
                        <select class="form-select form-select-sm" @bind="LogCount" @bind:after="RefreshLogs">
                            <option value="50">Last 50</option>
                            <option value="100">Last 100</option>
                            <option value="500">Last 500</option>
                            <option value="1000">All</option>
                        </select>
                    </div>
                    <div class="filter-actions">
                        <button class="btn btn-sm btn-outline-secondary" @onclick="RefreshLogs" title="Refresh logs">
                            <i class="bi bi-arrow-clockwise"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-danger" @onclick="ClearLogs" title="Clear all logs">
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>
                </div>

                <div class="log-content">
                    @if (FilteredLogs.Any())
                    {
                        <table class="table table-sm table-hover">
                            <thead>
                                <tr>
                                    <th style="width: 140px;">Timestamp</th>
                                    <th style="width: 80px;">Status</th>
                                    <th style="width: 120px;">Project</th>
                                    <th style="width: 150px;">File</th>
                                    <th style="width: 80px;">Duration</th>
                                    <th>Details</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var log in FilteredLogs)
                                {
                                    <tr class="log-entry log-@log.Status.ToLower()">
                                        <td>@log.StartTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                        <td>
                                            <span class="badge bg-@GetStatusBadgeClass(log.Status)">
                                                @log.Status
                                            </span>
                                        </td>
                                        <td>@log.ProjectId</td>
                                        <td>@(log.FileName ?? "N/A")</td>
                                        <td>@((log.EndTime - log.StartTime).TotalMilliseconds.ToString("F0"))ms</td>
                                        <td class="log-details">@log.Details</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="text-center text-muted p-5">
                            <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                            <p class="mt-3">No logs found</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public bool IsVisible { get; set; }

    [Parameter]
    public EventCallback OnClose { get; set; }

    private string FilterStatus { get; set; } = "";
    private string SearchText { get; set; } = "";
    private int LogCount { get; set; } = 100;
    private List<TransformationLog> FilteredLogs { get; set; } = new();

    protected override void OnParametersSet()
    {
        if (IsVisible)
        {
            RefreshLogs();
        }
    }

    private async Task Close()
    {
        IsVisible = false;
        await OnClose.InvokeAsync();
    }

    private void RefreshLogs()
    {
        var logs = LogService.GetRecentLogs(LogCount);

        if (!string.IsNullOrEmpty(FilterStatus))
        {
            logs = logs.Where(l => l.Status == FilterStatus);
        }

        if (!string.IsNullOrEmpty(SearchText))
        {
            logs = logs.Where(l =>
                l.ProjectId.Contains(SearchText, StringComparison.OrdinalIgnoreCase) ||
                (l.FileName?.Contains(SearchText, StringComparison.OrdinalIgnoreCase) ?? false) ||
                (l.Details?.Contains(SearchText, StringComparison.OrdinalIgnoreCase) ?? false));
        }

        FilteredLogs = logs.ToList();
    }

    private async Task ClearLogs()
    {
        LogService.ClearLogs();
        RefreshLogs();
        await Task.CompletedTask;
    }

    private string GetStatusBadgeClass(string status) => status switch
    {
        "Success" => "success",
        "Error" => "danger",
        "Warning" => "warning",
        _ => "secondary"
    };
}
