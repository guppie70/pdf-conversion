{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "PdfConversion": "Debug"
    }
  },
  "AllowedHosts": "*",
  "AppSettings": {
    "DataDirectory": "/app/data",
    "InputPath": "/app/data/input/optiver/projects",
    "OutputPath": "/app/data/output/optiver/projects",
    "XsltPath": "/app/xslt",
    "Xslt3ServiceUrl": "http://xslt3service:4806",
    "MaxFileSize": 10485760,
    "SupportedFileExtensions": [ ".xml", ".html", ".xhtml" ],
    "DefaultTransformationTimeout": 30000
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=transformations.db"
  },
  "Redis": {
    "ConnectionString": "",
    "Enabled": false
  },
  "BatchProcessing": {
    "MaxConcurrency": 4,
    "QueueCapacity": 100,
    "ParallelFilesPerBatch": 4
  },
  "PerformanceMonitoring": {
    "SlowOperationThresholdMs": 5000,
    "HighMemoryThresholdMB": 1024,
    "AutoRefreshIntervalSeconds": 5
  },
  "MemoryCache": {
    "SizeLimitMB": 100,
    "DefaultExpirationMinutes": 30,
    "TransformationResultExpirationMinutes": 30,
    "XsltTemplateExpirationMinutes": 60
  },
  "ConversionSettings": {
    "SpecialSectionFiles": [
      "front-cover.xml",
      "toc.xml",
      "back-cover.xml"
    ]
  }
}
